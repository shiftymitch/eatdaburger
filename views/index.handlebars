<div class="container text-center">
  
  <div class="d-flex justify-content-center">
    <div class="burger-cols rounded col-4 p-3 mb-3">
      <div class="text-center">
        <img class="burger mt-5" src="/assets/img/cheeseburger.png" alt="">
      </div>
      <h1 class="color1 mb-5">Eat Da Burger</h1>
    </div>
  </div>

  <div class="burger-cols rounded row p-3 mb-3">
    <div class="col">
      <h2 class="color1">Un-eaten Burgers</h2>

      {{!-- Loop Through & Display Un-eaten Burgers --}}
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col">
      <h2 class="color1">Eaten Burgers</h2>

      {{!-- Loop Through & Display Eaten Burgers --}}
      <ul>
        {{#each burgers}}
          {{#if eaten}}
            {{> burgers/burger-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
      
    </div>
  </div>
  
  <div class="d-flex justify-content-center">
    <div class="burger-cols rounded col-4 p-3 mb-3">
      <h2 class="color1">Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg" class="color1">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group color1">
          <input type="radio" name="eaten" value="0" checked> Make<br>
          <input type="radio" name="eaten" value="1" > Eat
        </div>

        <button class="btn btn-secondary" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>
